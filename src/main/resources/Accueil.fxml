<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AccueilController" stylesheets="@style/style.css">

    <!-- Logo Bomberman -->
    <ImageView fx:id="logoImage" id="logoImage" fitWidth="800" preserveRatio="true">
        <image>
            <Image url="@images/home/logo.png"/>
        </image>
    </ImageView>

    <!-- Titre -->
    <Label text="Choisir mode de jeu :" styleClass="label"/>

    <!-- Bouton pour dÃ©marrer -->
    <Button text="Jouer" onAction="#onJouerClicked" styleClass="button"/>

    <!-- Bouton pour mode multijoueur 1V1 -->
    <Button text="Multiplayer" styleClass="button"/>

    <!-- Bouton pour mode contre machine 1VM -->
    <Button text="Contre Machine" styleClass="button"/>

    <!-- Conteneur pour bouton toggle son -->
    <HBox alignment="CENTER_RIGHT">
        <Button fx:id="soundToggleButton" onAction="#onToggleSound" style="-fx-background-color: transparent;">
            <graphic>
                <ImageView fx:id="soundIcon" fitHeight="40" fitWidth="40">
                    <image>
                        <Image url="@images/home/sound-on.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

</VBox>
